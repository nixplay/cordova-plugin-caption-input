<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-caption-input" version="1.0.27" xmlns="http://cordova.apache.org/ns/plugins/1.0">
	<!-- pre add gradle dependencies -->
	<name>PhotoCaptionInputViewCordova</name>
	<author>James Kong</author>
	<description>Caption input view</description>
	<dependency id="cordova-plugin-cocoapod-support" version="~1.3.0"/>
	<js-module name="PhotoCaptionInputViewCordova" src="www/caption-input.js">
		<clobbers target="plugins.photoCaptionInputView"/>
	</js-module>
	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="PhotoCaptionInputViewCordova">
				<param name="ios-package" value="PhotoCaptionInputViewCordova"/>
			</feature>
		</config-file>
		<header-file src="src/ios/PhotoCaptionInputViewCordova.h"/>
		<source-file src="src/ios/PhotoCaptionInputViewCordova.m"/>
		<pod name="MWPhotoBrowser" git="https://github.com/nixplay/MWPhotoBrowser" branch="develop"/>
		<pod branch="develop" git="https://github.com/nixplay/PhotoCaptionInputView.git" name="PhotoCaptionInputView"/>
		<pod name="SDWebImage" version="4.0.0"/>
		<resource-file src="src/ios/PhotoCaptionInputViewCordova.bundle" />
	</platform>
	<platform name="android">
	
    <framework src="com.android.support:design:25.1.1"/>
    <framework src="com.android.support:appcompat-v7:25.1.1"/>
    <framework src="com.android.support:support-v4:25.1.1"/>
    <framework src="com.android.support:cardview-v7:25.1.1"/>
    <framework src="com.facebook.fresco:fresco:1.2.0"/>
    <framework src="com.github.mmin18:realtimeblurview:1.1.0"/>
    <framework src="me.relex:circleindicator:1.2.2@aar"/>
    <framework src="jp.wasabeef:fresco-processors:2.0.0"/>
   	<framework src="jp.co.cyberagent.android.gpuimage:gpuimage-library:1.3.0"/>
    <framework src="com.android.support:recyclerview-v7:24.0.0"/>
    <framework src="com.android.support:cardview-v7:24.0.0"/>
    
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="PhotoCaptionInputViewCordova">
				<param name="android-package" value="cordova-plugin-caption-input.PhotoCaptionInputViewCordova"/>
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml"/>
		<source-file src="src/android/PhotoCaptionInputViewCordova.java" target-dir="src/cordova-plugin-caption-input/PhotoCaptionInputViewCordova"/>
	</platform>
</plugin>